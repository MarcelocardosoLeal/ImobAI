 {
  "kind": "collectionType",
  "collectionName": "imoveis",
  "info": {
    "singularName": "imovel",
    "pluralName": "imoveis",
    "displayName": "Imoveis",
    "description": "Cadastro de imóveis (título, descrição, imagens, preço, tipo, contrato, localização e status)."
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["files", "images", "videos"]
    },
    "price": {
      "type": "decimal"
    },
    "tipo_contrato": {
      "type": "enumeration",
      "enum": ["venda", "aluguel", "agil"]
    },
    "tipo_imovel": {
      "type": "enumeration",
      "enum": ["apartamento", "casa", "terreno", "galpao", "casa_condominio"]
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "bairro": {
      "type": "string"
    },
    "cidade": {
      "type": "string"
    },
    "estado": {
      "type": "string"
    },
    "tipologia": {
      "type": "string"
    }
  }
}