## Exemplo de variáveis para preencher no Portainer (Stacks > Add/Edit stack > Environment variables)
# NÃO COMMITAR VALORES REAIS. Use este arquivo apenas como referência dos nomes.

# Ambiente
NODE_ENV=production

# Banco de dados (Postgres 17.6)
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=strapidb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=COLOQUE_A_SENHA_AQUI

# Segredos do Strapi (gerar valores fortes)
ADMIN_JWT_SECRET=COLOQUE_AQUI
API_TOKEN_SALT=COLOQUE_AQUI
JWT_SECRET=COLOQUE_AQUI
TRANSFER_TOKEN_SALT=COLOQUE_AQUI
# APP_KEYS deve ter 4 chaves separadas por vírgula
APP_KEYS=KEY1,KEY2,KEY3,KEY4

# S3/MinIO (reaproveitar da stack antiga)
AWS_ACCESS_KEY_ID=COLOQUE_AQUI
AWS_SECRET_ACCESS_KEY=COLOQUE_AQUI
AWS_REGION=us-east-1
AWS_S3_BUCKET=bloco
AWS_S3_ENDPOINT=https://imobs3.advancedbot.com.br
AWS_S3_FORCE_PATH_STYLE=true

# Integração de import/export (segredo obrigatório em prod)
IMPORT_SECRET=COLOQUE_AQUI

# Fluxo de corretores (flags)
AGENTS_RESTRICT_LEADS=false
AGENT_AUTO_ASSIGN=false