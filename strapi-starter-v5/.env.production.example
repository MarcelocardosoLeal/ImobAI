# ImobAI Strapi v5 — Exemplo de .env para Produção
# Copie para .env.production e ajuste valores reais em segredo (preferencialmente via Portainer/Secrets)

# Ambiente
NODE_ENV=production
PORT=1337

# Database (ajuste conforme seu serviço de Postgres)
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres # ou hostname do serviço (ex.: postgres17_postgres em Swarm)
DATABASE_PORT=5432
DATABASE_NAME=imobdb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=CHANGE_ME
DATABASE_SSL=false

# Segurança (obrigatórios)
APP_KEYS=CHANGE_ME_1,CHANGE_ME_2,CHANGE_ME_3,CHANGE_ME_4
ADMIN_JWT_SECRET=CHANGE_ME
JWT_SECRET=CHANGE_ME
API_TOKEN_SALT=CHANGE_ME
TRANSFER_TOKEN_SALT=CHANGE_ME

# Integração de importação
IMPORT_SECRET=CHANGE_ME

# Flags operacionais (início seguro)
AGENTS_RESTRICT_LEADS=false
AGENT_AUTO_ASSIGN=false

# Uploads S3/MinIO (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=true

# Observabilidade (opcional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Live Preview (opcional)
STRAPI_PLUGIN_PREVIEW_WEB_URL=
STRAPI_PLUGIN_PREVIEW_APP_NAME=

# Outras opções
# APP_URL=https://cms.seu-dominio.com